<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.overpass.soraac">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SoraacApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="by.overpass.soraac.ui.main.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="by.overpass.soraac.ui.launch.activity.LaunchActivity" />
        <activity android:name="by.overpass.soraac.ui.mission.activity.MissionActivity" />
        <activity android:name="by.overpass.soraac.ui.rocket.activity.RocketActivity" />
        <activity android:name="by.overpass.soraac.ui.settings.activity.SettingsActivity" />
    </application>

</manifest>